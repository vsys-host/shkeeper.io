{% extends 'base.j2' %}

{% block body %}
    <div class="container login-container">
      <div class="row align-items-center h-100">
        <div class="col d-flex flex-column align-items-center justify-content-center">
          <img class="big-logo" width="200" src="{{ url_for('static', filename='images/vsys-logo.' + theme + '.png') }}" alt="logo" />

          <h3 class="mb-4">{% if regenerate %}Backup Codes Regenerated{% else %}2FA Enabled Successfully{% endif %}</h3>

          <div class="card mx-auto" style="max-width: 650px;">
            <div class="card-body">
              <div class="alert alert-warning" role="alert">
                <strong>‚ö†Ô∏è Important:</strong> Save these backup codes in a safe place. Each code can only be used once.
              </div>

              <h5 class="card-title mb-3">Your Backup Codes</h5>
              <p class="card-text">Use these codes if you lose access to your authenticator app:</p>

              <div class="row mt-3">
                {% for code in backup_codes %}
                  <div class="col-md-6 col-12 mb-3">
                    <div class="alert alert-secondary text-center mb-0" style="font-family: monospace; font-size: 1.1rem; padding: 0.75rem;">
                      {{ code }}
                    </div>
                  </div>
                {% endfor %}
              </div>

              <div class="alert alert-info mt-4" role="alert">
                üí° <strong>Tip:</strong> Print these codes or save them in a password manager.
              </div>

              <div class="d-grid gap-2 mt-4">
                <button class="btn btn-outline-secondary" onclick="window.print()">
                  üñ®Ô∏è Print Backup Codes
                </button>
                <a href="{{ url_for('wallet.settings') }}" class="btn btn-primary">Continue to Settings</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      @media print {
        body * {
          visibility: hidden;
        }
        .card, .card * {
          visibility: visible;
        }
        .card {
          position: absolute;
          left: 0;
          top: 0;
        }
        .btn {
          display: none;
        }
      }
    </style>
{% endblock %}
