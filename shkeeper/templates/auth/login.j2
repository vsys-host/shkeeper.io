
{% extends 'base.j2' %}


{% block body %}
    <div class="container login-container">
      <div class="row align-items-center h-100">
        <div
          class="col d-flex flex-column align-items-center justify-content-center"
        >
          <img class="big-logo" width="280" src="{{ url_for('static', filename='images/vsys-logo.' + theme + '.png') }}" alt="logo" />

          {% for message in get_flashed_messages() %}
            <div class="alert alert-danger" role="alert">{{ message }}</div>
          {% endfor %}

          <form class="d-flex flex-column align-items-center" method="post">
            <input
              placeholder="Login"
              type="text"
              name="name"
              class="form-control login-input"
              id="login-account"
              aria-describedby="emailHelp"
              autofocus
            />
            <input
              placeholder="Password"
              type="password"
              name="password"
              class="form-control password-input"
              id="login-password"
            />
            <button type="submit" class="btn button">Login</button>
          </form>
        </div>
      </div>
    </div>
{% endblock %}