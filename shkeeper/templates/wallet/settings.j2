{% extends 'wallet/page.j2' %}

{% block content %}
<div class="content-container px-5 py-4">
  <div class="wallets-title__wrapper d-flex flex-wrap justify-content-center mb-5">
    <div class="w-100">
      <h1 class="title-text">Settings</h1>
    </div>
  </div>

  {% for category, message in get_flashed_messages(with_categories=true) %}
    <div class="alert alert-{{ 'warning' if category == 'warning' else 'success' if category == 'success' else 'danger' }}" role="alert">
      {{ message }}
    </div>
  {% endfor %}

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title mb-4">Two-Factor Authentication</h3>

          {% if user.totp_enabled %}
            <div class="alert alert-success d-flex align-items-center" role="alert">
              <svg width="24" height="24" class="me-2" fill="currentColor">
                <circle cx="12" cy="12" r="10" fill="#198754"/>
                <path d="M9 12l2 2 4-4" stroke="white" stroke-width="2" fill="none"/>
              </svg>
              <div>
                <strong>2FA is enabled</strong>
                <div class="small">Enabled on {{ user.totp_enabled_at.strftime('%Y-%m-%d %H:%M') if user.totp_enabled_at else 'Unknown' }}</div>
              </div>
            </div>

            <p class="mb-3">Two-factor authentication adds an extra layer of security to your account by requiring a code from your authenticator app in addition to your password.</p>

            <div class="d-grid gap-2">
              <a href="{{ url_for('auth.regenerate_backup_codes') }}" class="btn btn-outline-primary">
                üîÑ Regenerate Backup Codes
              </a>
              <a href="{{ url_for('auth.disable_2fa') }}" class="btn btn-outline-danger">
                ‚ùå Disable Two-Factor Authentication
              </a>
            </div>

          {% else %}
            <div class="alert alert-warning d-flex align-items-center" role="alert">
              <svg width="24" height="24" class="me-2" fill="currentColor">
                <circle cx="12" cy="12" r="10" fill="#ffc107"/>
                <text x="12" y="16" font-size="16" text-anchor="middle" fill="white" font-weight="bold">!</text>
              </svg>
              <div>
                <strong>2FA is not enabled</strong>
                <div class="small">Protect your account with two-factor authentication</div>
              </div>
            </div>

            <p class="mb-3">Two-factor authentication (2FA) significantly enhances your account security by requiring:</p>
            <ul class="mb-4">
              <li>Your password (something you know)</li>
              <li>A code from your authenticator app (something you have)</li>
            </ul>

            <p class="mb-3"><strong>To enable 2FA, you'll need:</strong></p>
            <ul class="mb-4">
              <li>An authenticator app like Google Authenticator, Authy, or Microsoft Authenticator</li>
              <li>A few minutes to complete the setup</li>
            </ul>

            <div class="d-grid">
              <a href="{{ url_for('auth.setup_2fa') }}" class="btn btn-primary btn-lg">
                üîí Enable Two-Factor Authentication
              </a>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- Additional settings sections can be added here -->
      {# <div class="card">
        <div class="card-body">
          <h3 class="card-title mb-3">Account Information</h3>
          <div class="row mb-2">
            <div class="col-4"><strong>Username:</strong></div>
            <div class="col-8">{{ user.username }}</div>
          </div>
          <div class="row">
            <div class="col-4"><strong>User ID:</strong></div>
            <div class="col-8">{{ user.id }}</div>
          </div>
        </div>
      </div> #}
    </div>
  </div>
</div>

<script>
  document.getElementById("settings-link").classList.add("nav-link--active");
</script>
{% endblock %}
